<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_floating_main"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        app:backgroundTint="@color/colorSecondary"
        app:fabCustomSize="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_plus_white_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_floating_request"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="164dp"
        android:backgroundTint="#698CFF"
        android:clickable="true"
        android:visibility="gone"
        app:backgroundTint="#698CFF"
        app:fabCustomSize="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/folded" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_floating_donate"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="104dp"
        android:clickable="true"
        android:visibility="gone"
        app:backgroundTint="#698CFF"
        app:fabCustomSize="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/give" />

    <TextView
        android:id="@+id/main_floating_requestText"
        android:layout_width="84dp"
        android:layout_height="22dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:background="#FFA851"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Request"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/main_floating_request"
        app:layout_constraintEnd_toStartOf="@+id/main_floating_request" />

    <TextView
        android:id="@+id/main_floating_donateText"
        android:layout_width="84dp"
        android:layout_height="22dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:background="#FFA851"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="Donate"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/main_floating_donate"
        app:layout_constraintEnd_toStartOf="@+id/main_floating_donate" />

    <ListView
        android:id="@+id/main_listview"
        android:layout_width="390dp"
        android:layout_height="571dp"
        android:layout_marginTop="120dp"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_title_rankings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Donation Rankings"
        android:textColor="@color/colorThird"
        android:textColorHighlight="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

